#wrapper
	#content
		#info
			width 100%
			height 2em
			background-color #2196F3
			span
				padding 0 .75em
				font-size 1em
				font-weight 700
				color #FFF
				line-height 2
				font-family 'Muli', 'Noto Sans Korean', sans-serif
		#notice
			height 12em
			border-bottom 2px solid #FFF
			overflow-y auto
			table
				width 100%
				color #FFF
				font-family 'Muli', 'Noto Sans Korean', sans-serif
				tr
					border 0
					td
						padding .2em .5em
						font-weight 600
		#probTable
			table
				color #FFF
				width 100%
				margin 3em auto
				border-collapse collapse
				border-spacing 0
				font-family 'Muli', 'Noto Sans Korean', sans-serif
				border-bottom 2px solid #FFF
				tr
					position relative
					width 100%
					font-size 1.25em
					text-align center
					&:nth-of-type(1)
						td
							padding .3em 0
							&:nth-of-type(1)
								font-size 1.5em
								font-weight 700	
								border 0
								text-align left
								padding	.3em .75em
					td
						padding .5em 0
						border-bottom 1px solid #FFF
						&:nth-of-type(1)
							width 85%
							border-right 1px solid #FFF
						&:nth-of-type(2)
							width 15%
					&:hover
						background-color #757575
				tr.select
					display none
					td
						border-right 0
						font-size .9em
						font-weight 500
						p
							margin 0
							line-height 2
							a
								line-height 3
								text-decoration none
								color #FFF
						h4
							margin 0
							line-height 2
							font-size .8em
						input[type='text']
							border-style solid
							border-width 1px 1px 1px 1px
							border-color #FFF
							margin 1em
							text-align center
							font-size 1.1em
							padding .15em
							width 15em
							font-family 'Muli', 'Noto Sans Korean', sans-serif
						button
							border 0
							background-color #f44336
							font-family 'Muli', sans-serif
							font-size 1.1em
							padding .25em 1em
							color #FFF
							width 5em
					&:hover
						background-color #222222